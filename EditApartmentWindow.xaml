<Window x:Class="WpfApp1.EditApartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Apartment" Height="300" Width="400">
    <Grid>
        <Label Content="Area:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,18,0,0" />
        <TextBox x:Name="AreaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="78,22,0,0" Width="225"/>

        <Label Content="Rooms:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" />
        <TextBox x:Name="RoomsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="78,48,0,0" Width="225"/>

        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,70,0,0" />
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="78,74,0,0" Width="225"/>

        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,100,0,0" />
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="78,104,0,0" Width="225"/>

        <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,130,0,0" RenderTransformOrigin="-0.912,0.378"/>
    </Grid>
</Window>
