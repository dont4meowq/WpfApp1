<Window x:Class="WpfApp1.AgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Window" Height="484" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Улица:"/>
            <TextBox Name="StreetTextBox" Width="200"/>

            <Label Content="Город:"/>
            <TextBox Name="CityTextBox" Width="200"/>

            <Label Content="Почтовый индекс:"/>
            <TextBox Name="PostalCodeTextBox" Width="200"/>

            <Label Content="Площадь (кв. м):"/>
            <TextBox Name="AreaTextBox" Width="200"/>

            <Label Content="Количество комнат:"/>
            <TextBox Name="RoomsTextBox" Width="200"/>

            <Label Content="Цена:"/>
            <TextBox Name="PriceTextBox" Width="200"/>

            <Label Content="Описание:"/>
            <TextBox Name="DescriptionTextBox" Width="200" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Name="AddApartmentButton" Content="Добавить Квартиру" Click="AddApartmentButton_Click" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
