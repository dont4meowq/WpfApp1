<Window x:Class="WpfApp1.AgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Window" Height="1000" Width="600">
    <Grid>
        <Label Content="Street:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,6,0,0" />
        <TextBox x:Name="StreetTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,10,0,0" Width="335"/>

        <Label Content="City:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,36,0,0" />
        <TextBox x:Name="CityTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,40,0,0" Width="335"/>

        <Label Content="Postal Code:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,70,0,0" />
        <TextBox x:Name="PostalCodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,74,0,0" Width="295"/>

        <Label Content="Area:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,100,0,0" />
        <TextBox x:Name="AreaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,104,0,0" Width="335"/>

        <Label Content="Rooms:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,130,0,0" />
        <TextBox x:Name="RoomsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,134,0,0" Width="335"/>

        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,160,0,0" />
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,164,0,0" Width="335"/>

        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,190,0,0" />
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,190,0,0" Height="50" Width="295"/>

        <Button Content="Add Apartment" Click="AddApartmentButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,250,0,0"/>

        <DataGrid x:Name="ApartmentsDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,300,0,0" Height="489" Width="580" SelectionChanged="ApartmentsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Street" Binding="{Binding Address.Street}" />
                <DataGridTextColumn Header="Area" Binding="{Binding Area}" />
                <DataGridTextColumn Header="Rooms" Binding="{Binding Rooms}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Edit Apartment" Click="EditApartmentButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,339,114"/>
        <Button Content="Delete Apartment" Click="DeleteApartmentButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,212,114"/>
    </Grid>
</Window>
